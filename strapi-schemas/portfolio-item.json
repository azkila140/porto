{
    "kind": "collectionType",
    "collectionName": "portfolio_items",
    "info": {
        "singularName": "portfolio-item",
        "pluralName": "portfolio-items",
        "displayName": "Portfolio Item",
        "description": "Showcase portfolio projects"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "title": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "description": {
            "type": "text",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "category": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "image": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ],
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "imageUrl": {
            "type": "string",
            "required": false,
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "gradient": {
            "type": "string",
            "required": true,
            "default": "from-blue-500 to-cyan-500",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "order": {
            "type": "integer",
            "required": true,
            "default": 0,
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "featured": {
            "type": "boolean",
            "default": true,
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        }
    }
}